<div class="section-header">
    {{#if name}}
    <h4 class="bold pull-left">
        {{#if website}}
            <a href="{{website}}" target="_blank">
                {{name}} <i class="fa fa-external-link" aria-hidden="true"></i>
            </a>
        {{else}}
            {{name}}
        {{/if}}
    </h4>
    {{/if}}
    <h5 class="italic pull-right">
        {{#if date}}
            {{#is date date}}
                {{formatDateWork date}}
            {{else}}
                <span class="date">{{formatDateWork date}}</span>
                    {{#if endDate}}
                <span class="endDate"> - {{formatDateWork endDate}}</span>
                    {{else}}
                <span class="endDate"> - Present</span>
                {{/if}}
            {{/is}}
        {{else if endDate}}
            <span class="endDate">completed {{formatDateWork endDate}}</span>
        {{else if releaseDate}}
            {{formatDateWork releaseDate}}
        {{/if}}
    </h5>
</div>
