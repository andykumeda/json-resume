<div class="section-header clearfix">
    {{#if company}}
    <h3 class="bold pull-left">
        {{#if website}}
            <a href="{{website}}" target="_blank">
                {{company}} <i class="fa fa-external-link" aria-hidden="true"></i>
            </a>
        {{else}}
            {{company}}
        {{/if}}
    </h3>
    {{/if}}
    <h5 class="italic pull-right">
        {{#if startDate}}
            {{#is startDate endDate}}
                {{formatDateWork startDate}}
            {{else}}
                <span class="startDate">{{formatDateWork startDate}}</span>
                    {{#if endDate}}
                <span class="endDate"> - {{formatDateWork endDate}}</span>
                    {{else}}
                <span class="endDate"> - Present</span>
                {{/if}}
            {{/is}}
        {{else if endDate}}
            <span class="endDate">completed {{formatDateWork endDate}}</span>
        {{else if releaseDate}}
            {{formatDateWork releaseDate}}
        {{/if}}
    </h5>
</div>
