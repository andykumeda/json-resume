{{#if resume.writing.length}}
<div class="container work-container">
    {{> title value="Articles" icon="fas fa-pencil"}}
    {{#each resume.writing}}
        <section class="item">
            {{#if reference}}
                <h6 class="info-text">
                    <a href="{{reference}}" target="_blank">
                        {{name}}<i class="fa fa-external-link" aria-hidden="true"></i>
                    </a>
                </h6>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}
